{
  "private": true,
  "version": "0.0.0",
  "description": "vite2 vue3 typescript, spa",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "api": "apidoc -i shared/api -o api-doc",
    "serve:test": "yarn workspace test-client run serve",
    "build:test": "rimraf dist/test-client && yarn workspace test-client run build",
    "build:all": "yarn build:test",
    "cz": "git cz",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint -e -V"
  },
  "dependencies": {
    "axios-business": "^1.0.3",
    "element-plus": "^1.0.2-beta.55",
    "vue": "^3.2.2",
    "vue-router": "4",
    "weblibext": "^2.0.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.14.7",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/node": "^16.0.0",
    "@vitejs/plugin-legacy": "^1.4.3",
    "@vitejs/plugin-vue": "^1.2.3",
    "@vue/compiler-sfc": "^3.0.5",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.12.1",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "sass": "^1.35.1",
    "typescript": "^4.3.2",
    "vite": "2.3.8",
    "vite-plugin-checker": "^0.3.4",
    "vite-plugin-compression": "^0.3.1",
    "vite-plugin-legacy": "^2.1.0",
    "vite-plugin-style-import": "^1.0.1",
    "vue-eslint-parser": "^7.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,vue,md,json}": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  }
}
